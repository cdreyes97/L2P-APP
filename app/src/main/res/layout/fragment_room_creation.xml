<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/roomCreation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomCreation">


    <TextView
        android:id="@+id/form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/form_title"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/form_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/form_name"
        app:layout_constraintEnd_toEndOf="@+id/form_title"
        app:layout_constraintStart_toStartOf="@+id/form_title"
        app:layout_constraintTop_toBottomOf="@+id/form_title"
        android:autofillHints="" />

    <Spinner
        android:id="@+id/form_games"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:prompt="@string/game1"
        android:entries="@array/gameList"
        app:layout_constraintEnd_toEndOf="@+id/form_name"
        app:layout_constraintStart_toStartOf="@+id/form_name"
        app:layout_constraintTop_toBottomOf="@+id/form_name" />

    <EditText
        android:id="@+id/form_players"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:hint="NÃºmero de participantes"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/form_games"
        app:layout_constraintStart_toStartOf="@+id/form_games"
        app:layout_constraintTop_toBottomOf="@+id/form_games" />



    <EditText
        android:id="@+id/form_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:lines="5"
        android:hint="@string/form_description"
        app:layout_constraintEnd_toEndOf="@+id/form_players"
        app:layout_constraintStart_toStartOf="@+id/form_players"
        app:layout_constraintTop_toBottomOf="@+id/form_players" />

    <Button
        android:id="@+id/form_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="@string/form_button"
        app:layout_constraintEnd_toEndOf="@+id/form_description"
        app:layout_constraintStart_toStartOf="@+id/form_description"
        app:layout_constraintTop_toBottomOf="@+id/form_description" />

    <Button
        android:id="@+id/form_button_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:backgroundTint="#F44336"
        android:text="Cancelar"
        app:layout_constraintEnd_toEndOf="@+id/form_button"
        app:layout_constraintStart_toStartOf="@+id/form_button"
        app:layout_constraintTop_toBottomOf="@+id/form_button" />


</androidx.constraintlayout.widget.ConstraintLayout>